@using ContosoUniversity.Models;
@using ContosoUniversity.Enum;
@{
    ViewBag.Title = "IndexInstructor";
}

<div class="jumbotron">
    <h1>Contoso University - Instructor</h1>
</div>
<div class="row">


    <div>
        <table class="table table-striped table-bordered">
            <thead>
                
                @if (Session["User"] != null)
                {
                    Person user = (Person)Session["User"];
                <p  class="text-center h3">Agenda - @user.FirstMidName.ToUpper() @user.LastName.ToUpper()</p>
                }
            </thead>
            <tr >
                <th class="text-center">Heure</th>
                <th class="text-center ">Monday</th>
                <th class="text-center">Tuesday</th>
                <th class="text-center">Wednesday</th>
                <th class="text-center">Thursday</th>
                <th class="text-center">Friday</th>
            </tr>

            @for (int heure = 8; heure <= 19; heure++)
            {
            <tr>
                <td class="text-center">@heure h - @(heure + 1) h </td>

                <td class="text-center">@ViewBag.Lessons[heure][DayOfCourse.Monday]</td>
                <td class="text-center">@ViewBag.Lessons[heure][DayOfCourse.Tuesday]</td>
                <td class="text-center">@ViewBag.Lessons[heure][DayOfCourse.Wednesday]</td>
                <td class="text-center">@ViewBag.Lessons[heure][DayOfCourse.Thursday]</td>
                <td class="text-center">@ViewBag.Lessons[heure][DayOfCourse.Friday]</td>
                
            </tr>
            }
        </table>

    </div>


</div>

