@model ContosoUniversity.ViewModels.CreateLessonViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateLesson", "Lesson"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CreateLessonViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Course, htmlAttributes: new { @class = "control-label col-md-2" })
