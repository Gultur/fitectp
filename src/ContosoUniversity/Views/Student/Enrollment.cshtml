@model ContosoUniversity.ViewModels.StudentEnrollmentsViewModel

@{
    ViewBag.Title = "Enrollment";
}

<h2>Enrollment</h2>

<div>
    <h4>StudentEnrollmentsViewModel</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>

<table class="table">
    <tr>
        <th>Course Title</th>
        <th>Grade</th>
    </tr>
    @if (Model.Student.Enrollments != null)
    {
        foreach (var item in Model.Student.Enrollments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
        }

    }
    else
    {
        <p>There is no courses in your enrollment list</p>
    }
</table>
<table>
    <tr>
        <th>Course Title</th>

    </tr>
    @if (Model.CoursesList != null)
    {
        int cnt = 0;
        foreach (var course in Model.CoursesList)
        {
            if (cnt++ % 3 == 0)
            {
                @:</tr><tr>
                }
                @:<td>
                    <input type="checkbox"
                           name="selectedCourses"
                           value="@course.CourseID"
                           ) />
                    @course.CourseID @:  @course.Title
                @:</td>
            }

        }
        else
        {
            <p>There is no courses in your enrollment list</p>
        }
</table>
    <p>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
